# Terraform Variables Configuration
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"

# EC2 Instance Configuration
instance_type = "t3.xlarge"  # Options: t3.large, t3.xlarge, c5.2xlarge, g4dn.xlarge
storage_size  = 50           # GB

# SSH Configuration
key_name         = "your-key-pair-name"  # Name of your EC2 key pair
allowed_ssh_cidr = "0.0.0.0/0"          # Change to your IP (e.g., "1.2.3.4/32")

# Project Configuration
project_name = "ollama-webui"
